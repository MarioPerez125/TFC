@page
@model OrganizerWeb.Pages.IndexModel

<style>
    .card {
        max-width: 400px;
        margin: 32px auto 24px auto;
        padding: 32px 24px 24px 24px;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.10);
        background: #fff;
        border: 1px solid #e3e8ee;
    }
    .card h2 {
        margin-top: 0;
        margin-bottom: 18px;
        font-size: 1.4em;
        color: #2d3a4a;
        text-align: center;
    }
    .form-group {
        margin-bottom: 14px;
    }
    .form-group label {
        display: block;
        font-weight: 500;
        margin-bottom: 4px;
        color: #34495e;
    }
    .form-group input {
        width: 100%;
        padding: 7px 10px;
        border: 1px solid #cfd8dc;
        border-radius: 5px;
        font-size: 1em;
        background: #f8fafc;
    }
    .card button {
        width: 100%;
        padding: 10px;
        background: #1976d2;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 1.1em;
        font-weight: 600;
        cursor: pointer;
        margin-top: 10px;
        transition: background 0.2s;
    }
    .card button:hover {
        background: #125ea7;
    }
    .login-card {
        max-width: 400px;
        margin: 0 auto 24px auto;
        padding: 24px 24px 18px 24px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
        background: #f8fafc;
        border: 1px solid #e3e8ee;
    }
    .login-card h2 {
        margin-top: 0;
        margin-bottom: 14px;
        font-size: 1.2em;
        color: #2d3a4a;
        text-align: center;
    }
    .login-card input {
        width: 100%;
        padding: 7px 10px;
        border: 1px solid #cfd8dc;
        border-radius: 5px;
        font-size: 1em;
        background: #fff;
        margin-bottom: 10px;
    }
    .login-card button {
        width: 100%;
        padding: 9px;
        background: #43a047;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 1em;
        font-weight: 600;
        cursor: pointer;
        margin-top: 4px;
        transition: background 0.2s;
    }
    .login-card button:hover {
        background: #357a38;
    }
</style>

<div class="card">
    <h2>Registro de Organizador</h2>
    <form method="post" asp-page-handler="Register">
        <div class="form-group">
            <label>Nombre:</label>
            <input asp-for="Register.Name" required />
        </div>
        <div class="form-group">
            <label>Apellido:</label>
            <input asp-for="Register.LastName" required />
        </div>
        <div class="form-group">
            <label>Teléfono:</label>
            <input asp-for="Register.Phone" type="number" required />
        </div>
        <div class="form-group">
            <label>Fecha de nacimiento:</label>
            <input asp-for="Register.BirthDate" type="date" required />
        </div>
        <div class="form-group">
            <label>Ciudad:</label>
            <input asp-for="Register.City" required />
        </div>
        <div class="form-group">
            <label>País:</label>
            <input asp-for="Register.Country" required />
        </div>
        <div class="form-group">
            <label>Usuario:</label>
            <input asp-for="Register.Username" required />
        </div>
        <div class="form-group">
            <label>Email:</label>
            <input asp-for="Register.Email" type="email" required />
        </div>
        <div class="form-group">
            <label>Contraseña:</label>
            <input asp-for="Register.Password" type="password" required />
        </div>
        <button type="submit">Registrarse como Organizador</button>
    </form>
</div>

<div class="login-card">
    <h2>Login</h2>
    <form method="post" asp-page-handler="Login">
        <input asp-for="Auth.Username" placeholder="Usuario" />
        <input asp-for="Auth.Password" placeholder="Contraseña" type="password" />
        <button type="submit">Login</button>
    </form>
</div>

@if (!string.IsNullOrEmpty(Model.Result))
{
    <div style="color:red; text-align:center;">@Model.Result</div>
}